#upcoming_sessions
%strong= 'Upcoming Sessions'
#event_list
  = render :partial => 'events/list', :locals => { :events => @events }
%p.sign_up
  = link_to("+ Sign up to present", :controller => 'presentations', :action => 'new')

- if user_signed_in?
  = link_to("My Presentations", :controller => 'presentations', :action => 'list')

%h2
  Recent Presentations
  
- if @presentations.empty?
  #no_presentations
    Sorry, no video presentations are currently available

- @presentations.each do |p|
  .hp_presentation
    .title= p.title
    .video
      %video{:src => p.video.url, :controls => "controls"}

- unless @presentations.empty?
  %a "View all Presentations..."
  
